---
const summary = await fetch(`${import.meta.env.PIHOLE_API_URL}admin/api.php?summaryRaw${import.meta.env.PIHOLE_API_KEY}`);
const getQuerySources = await fetch(`${import.meta.env.PIHOLE_API_URL}admin/api.php?getQuerySources${import.meta.env.PIHOLE_API_KEY}`);
const topItems = await fetch(`${import.meta.env.PIHOLE_API_URL}admin/api.php?topItems${import.meta.env.PIHOLE_API_KEY}`);

// Parse the JSON responses
const summaryData = await summary.json();
const querySourcesData = await getQuerySources.json();
const topItemsData = await topItems.json();

// Merge the data into a single object
const data = {
  summary: summaryData,
  querySources: querySourcesData,
  topItems: topItemsData,
};
