---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<header class="px-12 sm:px-24 py-12 w-full">
	<a href="/" class="flex items-center gap-x-4">
		<h2 class="text-white text-3xl">
			{title}
		</h2>
	</a>

	<ul class="flex flex-col sm:flex-col gap-x-8 text-white">
		<li><a href="/">Dash<span>&rarr;</span></a></li>
		<li><a href="/projects">Projects<span>&rarr;</span></a></li>
		<li><a href="/about">About<span>&rarr;</span></a></li>
	</ul>
</header>


<style>
	ul li a {
		font-size: 1.2rem;
		padding: 0.5rem 1rem;
	}
	
</style>
